<Page x:Class="XAMLJumpstart.ResourcesAndStyling.IntroToResources.Intro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="Intro"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d">

    <Page.Resources>

        <SolidColorBrush x:Key="brushKindaRed" Color="#FFFF1111" />

    </Page.Resources>

    <Grid>

        <StackPanel Orientation="Vertical">
            <TextBlock Foreground="{StaticResource brushKindaRed}" Text="First textblock" />
            <TextBlock Foreground="{StaticResource brushKindaRed}" Text="Second textblock" />
        </StackPanel>

    </Grid>
</Page>
